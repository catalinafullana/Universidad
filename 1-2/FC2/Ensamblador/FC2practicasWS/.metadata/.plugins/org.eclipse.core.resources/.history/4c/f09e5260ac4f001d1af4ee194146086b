**
**  Notas de diseño:
**
** 	# define N 8
** 	# define INT_MAX 2147483647
**	int V [ N ] = { -7 ,3 , -9 ,8 ,15 , -16 ,0 ,3};
**	int min = INT_MAX ;
**	for ( i = 0; i < N ; i ++) {
**		if ( V [ i ] < min )
**			min = V [ i ];
**	}
**
**-------------------------------------------------------------------*/

.global main
.equ N, 8
.equ INT_MAX, 2147483647
.data
V:   .word -7,3,-9,8,15,-16,0,3

.bss
min: .space 4

.text
main:
    la s0, min
    li t0, INT_MAX
    sw t0, 0(s0)

//código profesor
	li t0, 0 //variable i
	li t1, N //variable limite
	la s1, V //vector
bucle:
	bge t0, t1, fin_bucle
	lw t3, 0(s1)
	add s1, s1, 4 //actualiza dir vector
	lw t4, 0(s0)
	bge t3, t4, no_actualiza
	sw t3, 0(s0)
no_actualiza:
	addi t0, t0, 1
	j bucle
fin_bucle:
fin:
	j fin

