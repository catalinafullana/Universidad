**
**  Notas de diseño:
**
** 	# define N 8
** 	# define INT_MAX 2147483647
**	int V [ N ] = { -7 ,3 , -9 ,8 ,15 , -16 ,0 ,3};
**	int min = INT_MAX ;
**	for ( i = 0; i < N ; i ++) {
**		if ( V [ i ] < min )
**			min = V [ i ];
**	}
**
**-------------------------------------------------------------------*/

.global main
.equ N, 8
.equ INT_MAX, 2147483647
.data
V:   .word -7,3,-9,8,15,-16,0,3

.bss
min: .space 4

.text
main:
	li t1, N		//t1=N
    la s0, min
    li t0, INT_MAX
    sw t0, 0(s0)
    li t2, 0		//t2=i

for:
	bge t2, t1, end_loop
	lw t3, 0(V+t2)	//t3 = V[i]
	lw t4, 0(s0)	//t4 = min
	blt t3, t4, update_min

	# Incrementar i
	addi t2, t2, 1
	j for

fin_for:
	j end

end:
	j .
	.end

si_menor:
	//min toma valor de v[i]
	j for

update_min:
	# Actualizar min
	sw t3, 0(s0)	# *s0 = V[i]

	# Incrementar i
	addi t2, t2, 1
	j loop
