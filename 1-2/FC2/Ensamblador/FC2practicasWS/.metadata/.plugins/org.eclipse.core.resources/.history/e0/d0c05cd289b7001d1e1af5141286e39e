**
**  Notas de diseño:
**
**	# define N 10
**	int res = 0;
**	for (int i = 0; i < N ; i ++) {
**		res += i ;
**	}
**
**-------------------------------------------------------------------*/
.global main

//defino la constante N
.equ N, 10
//reservo espacio para el resultado
.bss
	res: 	.space

//programa
.text
main:
	li t2, N 	//t2=N
	li t3, 0	//t3=i
	li s2, 0	//s2=res

for:
	bge t3, t2, fin_for
	slli t5, t3, 2
	add t5, t5, t3
	lw s1, 0(t5)
	li t6, 0
	j	for

fin_for:
	la t1, res
	sw s2, 0(t1)

end:
	j .
.end
