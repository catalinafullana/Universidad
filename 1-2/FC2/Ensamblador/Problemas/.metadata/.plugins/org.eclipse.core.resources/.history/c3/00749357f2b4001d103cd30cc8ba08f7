/*
if (x >= y) {
    x = x+2;
    y = y-2;
}
*/

.global main

.data
	x: .word 5
	y: .word 7

.text
main:
	//meter en un registro
	lw t0, x
	lw t1, y

	blt t1, t0, fin //3 num de lineas a continuacion
	addi t0, t0, 2
	addi t1, t1, -1
	j fin

fin:
    j .
.end
